{
  "hosting": [
    {
      "site": "portfolio-13301",
      "public": "/",
      "ignore": [
        "firebase.json",
        ".*",
        "**/.git/**",
        "**/.vscode/**",
        "**/.firebase/**",
        "**/.github/**",
        "**/.edit/**",
        "**/node_modules/**",
        "*.code-workspace",
        ".gitignore",
        "README.md"
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ],
      "headers": [
        {
          "source": "**",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "max-age=0, must-revalidate, public"
            },
            {
              "key": "Access-Control-Allow-Origin",
              "value": "*"
            },
            {
              "key": "X-Frame-Options",
              "value": "deny"
            },
            {
              "key": "Content-Security-Policy",
              "value": "script-src 'self'"
            },
            {
              "key": "X-Content-Type-Options",
              "value": "nosniff"
            },
            {
              "key": "X-XSS-Protection",
              "value": "1; mode=block"
            }
          ]
        }
      ]
    }
  ]
}
